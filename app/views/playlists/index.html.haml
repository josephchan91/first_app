- content_for :head do
  = javascript_include_tag "playlists"

%h1 PLAYLISTS
- @playlists.each do |p|
  .song_row
    .song_title
      = link_to "#{p.name}", playlist_path(p.id)
    .song_fxns
      = link_to "Edit", edit_playlist_path(p.id) |
      = link_to "Remove", p, confirm: "fosho?", method: :delete
    .playlist_songs
      - p.songs.each do |s|
        = s.title
        <br/>
